---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import '@fontsource/quicksand/300.css';
import '@fontsource/quicksand/400.css';
import '@fontsource/quicksand/500.css';
import '@fontsource/quicksand/600.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/PeruvianFlavorsCoffee/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Peruvian Flavors Coffee</title>
    <!-- Añadir Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body>
    <div class="wrapper">
      <Header />

      <main>
		<slot />
      </main>

      <Footer />
    </div>

    <!-- Botón de WhatsApp -->
    <a href="https://wa.me/51987800910?text=Hola!%20estoy%20interesado%20en:" class="whatsapp-button" target="_blank" rel="noopener noreferrer">
      <i class="fab fa-whatsapp"></i>
    </a>
  </body>

  <style is:global>
    :root {
      --max-width: 1200px;
      --padding-x: 2rem;
      --padding-y: 4rem;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    @media (max-width: 768px) {
      :root {
        --padding-x: 1.5rem;
        --padding-y: 3rem;
      }
    }

    @media (max-width: 480px) {
      :root {
        --padding-x: 1rem;
        --padding-y: 2rem;
      }
    }

    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Quicksand', sans-serif;
      min-height: 100vh;
      background-color: #180f0f;
      overflow-x: hidden;
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      width: 100%;
      max-width: 100vw;
      background-color: #180f0f;
    }

    main {
      flex: 1;
      width: 100%;
      position: relative;
    }

    .whatsapp-button {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: #25d366;
      color: white;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
      z-index: 1000;
      animation: pulse 2s infinite;
    }

    a.whatsapp-button {
      text-decoration: none;
      color: inherit;
    }

    .whatsapp-button:hover {
      transform: translateY(-5px);
      background: #128C7E;
    }

    @keyframes pulse {
      0% {
        box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.5);
      }
      70% {
        box-shadow: 0 0 0 15px rgba(37, 211, 102, 0);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
      }
    }

    @media (max-width: 768px) {
      .whatsapp-button {
        width: 50px;
        height: 50px;
        font-size: 1.8rem;
        bottom: 20px;
        right: 20px;
      }
    }
  </style>
</html>


