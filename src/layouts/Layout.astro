---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import '@fontsource/quicksand/300.css';
import '@fontsource/quicksand/400.css';
import '@fontsource/quicksand/500.css';
import '@fontsource/quicksand/600.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/PeruvianFlavorsCoffee/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Peruvian Flavors Coffee</title>
  </head>

  <body>
    <div class="wrapper">
      <Header />

      <main>
		<slot />
      </main>

      <Footer />
    </div>
  </body>

  <style is:global>
    :root {
      --max-width: 1200px;
      --padding-x: 2rem;
      --padding-y: 4rem;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    @media (max-width: 768px) {
      :root {
        --padding-x: 1.5rem;
        --padding-y: 3rem;
      }
    }

    @media (max-width: 480px) {
      :root {
        --padding-x: 1rem;
        --padding-y: 2rem;
      }
    }

    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Quicksand', sans-serif;
      min-height: 100vh;
      background-color: #180f0f;
      overflow-x: hidden;
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      width: 100%;
      max-width: 100vw;
      background-color: #180f0f;
    }

    main {
      flex: 1;
      width: 100%;
      position: relative;
    }
  </style>
</html>


