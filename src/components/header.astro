---
import "../styles/header.css";
---

<header class="header">
    <nav class="navbar">
        <div class="nav-brand">
            <a href="/">
                <img src="/PeruvianFlavorsCoffee/logo-L.png" alt="Peruvian Flavors" />
            </a>
        </div>

        <div class="nav-links">
            <a href="#hero" class="nav-link">Inicio</a>
            <a href="#products" class="nav-link">Productos</a>
            <a href="#about" class="nav-link">Nosotros</a>
            <a href="#blog" class="nav-link">Blog</a>
            <a href="#contact" class="nav-link">Contacto</a>
            <a href="#testimonials" class="nav-link">Testimonios</a>
        </div>


    </nav>
</header>

<script>
    const menuToggle = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    menuToggle?.addEventListener('click', () => {
        menuToggle.classList.toggle('active');
        navLinks?.classList.toggle('active');
    });
</script>
